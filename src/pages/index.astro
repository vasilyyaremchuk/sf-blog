---
import { Icon } from 'astro-icon/components';
import Layout from '~/layouts/PageLayout.astro';
import BlogList from '~/components/blog/List.astro';
import Pagination from '~/components/blog/Pagination.astro';

import { fetchPosts } from '~/utils/blog';

// Get all posts for the front page (first 6 posts)
const allPosts = await fetchPosts();
const postsPerPage = 6;
const posts = allPosts.slice(0, postsPerPage);
const hasMorePosts = allPosts.length > postsPerPage;

const metadata = {
  title: 'Blog â€” Latest Articles and Insights',
  description: 'Discover our latest articles, tutorials, and insights. Stay updated with cutting-edge technology, best practices, and industry trends.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-50 via-white to-purple-50 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900 py-16 sm:py-20">
    <div class="mx-auto max-w-7xl px-6 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-6xl">
          <span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
            Our Blog
          </span>
        </h1>
        <p class="mt-6 text-lg leading-8 text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          Discover the latest insights, tutorials, and stories from our team. 
          Stay updated with cutting-edge technology, best practices, and industry trends.
        </p>
        
        <!-- Stats -->
        <div class="mt-10 flex items-center justify-center gap-x-6">
          <div class="flex items-center gap-x-2 text-sm text-gray-500 dark:text-gray-400">
            <Icon name="tabler:article" class="h-4 w-4" />
            <span>{allPosts.length} articles</span>
          </div>
          <div class="flex items-center gap-x-2 text-sm text-gray-500 dark:text-gray-400">
            <Icon name="tabler:clock" class="h-4 w-4" />
            <span>Updated regularly</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Blog Content -->

  <section class="py-16 sm:py-20">
    <div class="mx-auto max-w-7xl px-6 sm:px-6 lg:px-8">
      <!-- Featured Articles -->
      <div class="mx-auto max-w-4xl">
        <BlogList posts={posts} />
      </div>
      
      <!-- View All Articles Button -->
      {hasMorePosts && (
        <div class="mt-16 text-center">
          <a 
            href="/blog" 
            class="inline-flex items-center gap-x-2 rounded-full bg-blue-600 px-6 py-3 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 transition-colors"
          >
            <Icon name="tabler:article" class="h-4 w-4" />
            View All Articles
            <Icon name="tabler:arrow-right" class="h-4 w-4" />
          </a>
          <p class="mt-3 text-sm text-gray-500 dark:text-gray-400">
            Showing {posts.length} of {allPosts.length} articles
          </p>
        </div>
      )}
    </div>
  </section>

</Layout>
